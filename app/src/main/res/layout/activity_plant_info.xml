<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/detail_bg">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_collapseMode="pin">

            <ImageView
                android:id="@+id/plant_info_back_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/plant_info_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </Toolbar>


        <ImageView
            android:id="@+id/plant_info_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/plant_info_name_chs_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花的中文名"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="32dp"
                />

            <TextView
                android:id="@+id/plant_info_alias_names_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="别名"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="24dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/plant_info_name_latin_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花的拉丁名"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/plant_info_family_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花属"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/plant_info_genus_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花科"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/introduction"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/plant_info_value_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价值"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/plant_info_char_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="特征"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/plant_info_distribuion_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分布"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/plant_info_season_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花期"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>
</ScrollView>