<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FlowerListActivity"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/flower_list_head_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/login_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/flower_list_head_img"
        android:textSize="26sp"
        android:text="花名"
        android:layout_alignTop="@id/flower_list_head_img"
        android:textColor="@color/mypink"
        android:id="@+id/flower_list_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/flower_list_head_img"
        android:layout_alignBottom="@id/flower_list_head_img"
        android:text="描述"
        android:textSize="20sp"
        android:textColor="@color/gainsboro"
        android:id="@+id/flower_list_description"
        />
</RelativeLayout>